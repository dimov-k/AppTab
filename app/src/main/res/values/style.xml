<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="timer_FrameLayout">
        <item name="android:background">@drawable/timer_num2_bg</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="timer_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="my_cardView" parent="Widget.MaterialComponents.CardView">
        <item name="elevationOverlayEnabled">false</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="cardForegroundColor">@color/timer_num</item>"
    </style>
</resources>